{
  "name": "mcp-server-vscode",
  "displayName": "VSCode MCP Server",
  "publisher": "SemanticWorkbenchTeam",
  "description": "VSCode tools and resources as a Model Context Protocol (MCP) server in a VSCode extension.",
  "version": "0.0.9",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/semanticworkbench"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpServer.stopServer",
        "title": "MCP Server: Stop Server"
      },
      {
        "command": "mcpServer.startServer",
        "title": "MCP Server: Start Server"
      },
      {
        "command": "mcpServer.setPort",
        "title": "MCP Server: Set Port"
      },
      {
        "command": "mcpServer.toggleActiveStatus",
        "title": "MCP Server: Toggle Active Status"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "mcpServer.startOnActivate": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the MCP Server should start automatically on VSCode activation."
        },
        "mcpServer.port": {
          "type": "number",
          "default": 6010,
          "description": "The port that the MCP Server listens on. Set in case of conflicts or custom configurations."
        },
        "mcpServer.confirmationUI": {
          "type": "string",
          "enum": [
            "statusBar",
            "quickPick"
          ],
          "default": "statusBar",
          "description": "The UI to use for confirming changes: status bar buttons or quick pick dialog."
        },
        "mcpServer.confirmNonDestructiveCommands": {
          "type": "boolean",
          "default": false,
          "description": "If true, even commands marked as non-destructive (potentiallyDestructive=false) will require user confirmation."
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm package",
    "package-extension": "cross-env npm_config_user_agent=pnpm vsce package",
    "compile": "pnpm check-types && node build.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node build.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "node build.js --test",
    "pretest": "pnpm compile-tests",
    "test": "vscode-test",
    "package": "pnpm check-types && node build.js --production"
  },
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.13.10",
    "@types/pdf-parse": "^1.1.4",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.0",
    "cross-env": "^7.0.3",
    "sinon": "^20.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dedent": "^1.5.3",
    "diff": "^7.0.0",
    "esbuild": "^0.25.1",
    "express": "^4.21.2",
    "get-port": "^7.1.0",
    "ignore": "^7.0.3",
    "isbinaryfile": "^5.0.4",
    "mammoth": "^1.9.0",
    "p-wait-for": "^5.0.2",
    "pdf-parse": "^1.1.1",
    "strip-bom": "^5.0.0"
  },
  "packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3"
}
